<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mine" app:startDestination="@id/mineFragment">

    <fragment android:id="@+id/mineFragment"
              android:name="com.judge.app.fragments.MineFragment"
              android:label="">
        <action android:id="@+id/action_mineFragment_to_whistleFragment"
                app:destination="@id/whistleFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
        />
        <action android:id="@+id/action_mineFragment_to_messageFragment"
                app:destination="@id/messageFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
        />
    </fragment>
    <fragment android:id="@+id/whistleFragment"
              android:name="com.judge.app.fragments.WhistleFragment"
              android:label="@string/whistle_title">
        <action android:id="@+id/action_whistleFragment_to_whistleRulesFragment"
                app:destination="@id/whistleRulesFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
        />
    </fragment>
    <fragment android:id="@+id/whistleRulesFragment"
              android:name="com.judge.app.fragments.WhistleRulesFragment"
              android:label="@string/whistle_rules"/>
    <fragment android:id="@+id/messageFragment"
              android:name="com.judge.app.fragments.MessageFragment"
              android:label="@string/mine_message">
        <action android:id="@+id/action_messageFragment_to_publicMessageFragment"
                app:destination="@id/publicMessageFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
        />
        <action android:id="@+id/action_messageFragment_to_personalMessageFragment"
                app:destination="@id/personalMessageFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
        />
    </fragment>
    <fragment android:id="@+id/publicMessageFragment"
              android:name="com.judge.app.fragments.PublicMessageFragment"
              android:label="@string/public_message"/>
    <fragment android:id="@+id/personalMessageFragment"
              android:name="com.judge.app.fragments.PersonalMessageFragment"
              android:label="@string/personal_message"/>
</navigation>