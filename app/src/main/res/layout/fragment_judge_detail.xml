<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="com.judge.app.fragments.judge.JudgeDetailViewModel"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/judge_tablayout_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:id="@+id/back"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    tools:ignore="RtlHardcoded">

                <ImageView
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:background="@drawable/left"
                        tools:ignore="ContentDescription"/>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="足球"
                    android:textColor="#FFF"
                    android:textSize="@dimen/text_16"
                    android:layout_centerInParent="true"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"/>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_20">

            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    tools:text="五大联赛与中超消息讨论模块，看尽绿茵风光色彩"
                    android:text="@{viewModel.desc}"
                    android:textColor="#000"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:background="@drawable/defaut_judge_detail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    android:layout_marginTop="@dimen/dp_5"/>

            <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="23"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textSize="@dimen/text_22"
                    app:layout_constraintLeft_toRightOf="@id/iv_header"
                    app:layout_constraintTop_toTopOf="@id/iv_header"/>

            <TextView
                    android:id="@+id/tv_sign_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintLeft_toRightOf="@id/iv_header"
                    app:layout_constraintBottom_toBottomOf="@id/iv_header"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_37"/>

            <TextView
                    android:id="@+id/tv_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="348"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textSize="@dimen/text_22"
                    app:layout_constraintLeft_toRightOf="@id/tv_sign"
                    app:layout_constraintTop_toTopOf="@id/iv_header"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="话题"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintLeft_toRightOf="@id/tv_sign_text"
                    app:layout_constraintBottom_toBottomOf="@id/iv_header"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_37"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <com.flyco.tablayout.SlidingTabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="@color/colorAccent"
                    app:tl_textBold="BOTH"
                    app:tl_indicator_style="BLOCK"
                    app:tl_indicator_color="@color/colorPrimary"
                    app:tl_indicator_width="@dimen/dp_65"
                    app:tl_tab_space_equal="true"
                    app:tl_textsize="@dimen/text_14"/>

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:padding="@dimen/dp_20"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
        </LinearLayout>
    </LinearLayout>
</layout>