<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="594dp"
            android:layout_gravity="center"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="150dp"
            android:orientation="vertical"
            android:background="@drawable/login_content_border">

        <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/login_input_bg"
                android:hint="@string/username"
                android:textColor="#d4cdca"
                android:padding="10dp"
                android:maxLength="16"
                tools:ignore="Autofill,TextFields"/>

        <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/login_input_bg"
                android:hint="@string/password"
                android:textColor="#d4cdca"
                android:padding="10dp"
                android:layout_marginTop="36dp"
                android:maxLength="16"
                tools:ignore="Autofill,TextFields"/>

        <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/login_input_bg"
                android:layout_marginTop="36dp"
                android:spinnerMode="dropdown"
                android:dropDownVerticalOffset="50dp"/>


        <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/login_input_bg"
                android:hint="@string/code"
                android:textColor="#d4cdca"
                android:padding="10dp"
                android:maxLength="16"
                tools:ignore="Autofill,TextFields"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="174dp"
            android:layout_height="174dp"
            android:background="@drawable/login_border"
            android:gravity="center"
            app:layout_anchor="@id/content"
            app:layout_anchorGravity="top|center">

        <ImageView
                android:id="@+id/login_header"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/login_header"
                android:layout_gravity="center"
                tools:ignore="ContentDescription"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/iv_login"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:background="@drawable/login_btn"
            app:layout_anchor="@id/content"
            app:layout_anchorGravity="bottom|center"
            tools:ignore="ContentDescription"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:layout_centerInParent="true"
                android:textSize="35sp"
                android:textColor="#fff"
                tools:ignore="RelativeOverlap"/>
        <LinearLayout
                android:id="@+id/loginJump"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                tools:ignore="RtlHardcoded">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:background="@drawable/right"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
            android:id="@+id/btn_get_code"
            android:layout_width="100dp"
            android:layout_height="35dp"
            app:layout_anchor="@id/et_code"
            app:layout_anchorGravity="right|center"
            android:layout_marginEnd="70dp"
            tools:ignore="ContentDescription"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_anchor="@id/iv_login"
            app:layout_anchorGravity="bottom">
        <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_now"
                android:textColor="#ef9a48"
                android:textSize="17sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="100dp"/>

        <TextView
                android:id="@+id/findpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_password"
                android:textColor="#ef9a48"
                android:textSize="17sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="100dp"
                tools:ignore="RelativeOverlap"/>
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>