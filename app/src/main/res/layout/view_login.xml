<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dp_30"
        android:background="@drawable/login_bg"
>

    <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/login_content_border"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_70"
            android:paddingRight="@dimen/dp_20">

        <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/login_input_bg"
                android:hint="@string/username"
                android:maxLength="16"
                android:padding="@dimen/dp_10"
                android:textColor="#d4cdca"
                android:textSize="@dimen/text_14"
                tools:ignore="Autofill,TextFields"/>

        <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_36"
                android:background="@drawable/login_input_bg"
                android:hint="@string/password"
                android:padding="10dp"
                android:textColor="#d4cdca"
                android:textSize="@dimen/text_14"
                tools:ignore="Autofill,TextFields"/>

        <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_36"
                android:background="@drawable/login_input_bg"
                android:dropDownVerticalOffset="@dimen/dp_30"
                android:spinnerMode="dropdown"/>

        <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_36"
                android:background="@drawable/login_input_bg"
                android:hint="@string/code"
                android:maxLength="16"
                android:padding="@dimen/dp_10"
                android:textColor="#d4cdca"
                android:textSize="@dimen/text_14"
                tools:ignore="Autofill,TextFields"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:background="@drawable/login_border"
            android:gravity="center"
            app:layout_anchor="@id/content"
            app:layout_anchorGravity="top|center">

        <ImageView
                android:id="@+id/login_header"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center"
                android:background="@drawable/login_header"
                tools:ignore="ContentDescription"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/iv_login"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/login_btn"
            app:layout_anchor="@id/content"
            app:layout_anchorGravity="bottom|center"
            tools:ignore="ContentDescription"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@android:color/transparent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/login"
                android:textColor="#fff"
                android:textSize="@dimen/text_25"
                tools:ignore="RelativeOverlap"/>

        <LinearLayout
                android:id="@+id/loginJump"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center"
                tools:ignore="RtlHardcoded">

            <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:background="@drawable/right_yellow"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
            android:id="@+id/btn_get_code"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_50"
            app:layout_anchor="@id/et_code"
            app:layout_anchorGravity="right|center"
            tools:ignore="ContentDescription"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            app:layout_anchor="@id/iv_login"
            app:layout_anchorGravity="bottom">

        <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_70"
                android:text="@string/register_now"
                android:textColor="#ef9a48"
                android:textSize="@dimen/text_16"/>

        <TextView
                android:id="@+id/findpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/dp_70"
                android:text="@string/find_password"
                android:textColor="#ef9a48"
                android:textSize="@dimen/text_16"
                tools:ignore="RelativeOverlap"/>
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>